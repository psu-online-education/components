<div class="a11y-select">
  <div class="a11y-select__fallback">
    <label class="a11y-select__fallback-label" for="a11y-select--fallback-select">
    {{ label }}
    </label>
    <select class="a11y-select__fallback-select" id="a11y-select--fallback-select">
      {% for option in options %}
        <option class="a11y-select__option" value="{{ option.value }}">{{ option.label }}</option>
      {% endfor %}
    </select>
  </div>

  <div class="a11y-select__enhanced">
    <label class="a11y-select__label" for="a11y-select--enhanced-combobox">
      {{ label }}
    </label>
    <div class="a11y-select__combobox" id="a11y-select--enhanced-combobox" tabindex="0" aria-describedby="a11y-select--enhanced-description" aria-controls="a11y-select--listbox" aria-activedescendant="" aria-haspopup="listbox" role="combobox" aria-expanded="false">
      {{ empty_label }}
    </div>
    <ul class="a11y-select__listbox" id="a11y-select--listbox" role="listbox">
      {% for option in [{value: '', label: empty_label }]|merge(options) %}
        <li class="a11y-select__option" id="{{ 'a11y-select--' ~ (option.value ?: 'empty-option') }}" data-native-value="{{ option.value }}" role="option" aria-selected="{{ loop.first ? 'true' : 'false' }}">{{ option.label }}</li>
      {% endfor %}
    </ul>
  </div>
</div>
