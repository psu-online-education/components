{% embed '@oe/header/header.twig' %}

  {% set how_to_apply %}
    {% include '@oe/cta/cta-block.twig' with {
      label: 'How to Apply',
      url: '#',
      color_on_dark: 'light-blue',
      compact: true,
    } only %}
  {% endset %}
  {% set request_info %}
    {% include '@oe/cta/cta-block.twig' with {
      label: 'Request Info',
      url: '#',
      color: 'alt',
      color_on_dark: 'reversed',
      compact: true,
    } only %}
  {% endset %}

  {% set search_horizontal %}
    {% include '@oe/compact-search/compact-search.twig' with {
      align: 'right',
      orientation: 'horizontal',
      search_form: 'The search form goes here.'
    } only %}
  {% endset %}

  {% set search_vertical %}
    {% include '@oe/compact-search/compact-search.twig' with {
      align: 'right',
      search_form: 'The search form goes here.'
    } only %}
  {% endset %}

  {% set horizontal_menu %}
    {% include '@oe/horizontal-menu/horizontal-menu.twig' with {
      menu_name: 'Primary navigation menu',
      items: [
        { title: 'Home', url: '#', in_active_trail: true },
        { title: 'About Us', url: '#' },
        { title: 'Degrees and Certificates', url: '#' },
        { title: 'How Online Learning Works' },
        { title: 'Admissions', url: '#' },
        { title: 'Tuition and Financial Aid', url: '#' },
        { title: 'Military', url: '#'},
      ],
    } only %}
  {% endset %}

  {% set vertical_menu %}
    {% include '@oe/vertical-menu/vertical-menu.twig' with {
      menu_name: 'Primary navigation menu',
      density: 'tight',
      items: [
        { title: 'Home', url: '#', in_active_trail: true },
        { title: 'About Us', url: '#' },
        { title: 'Degrees and Certificates', url: '#' },
        { title: 'How Online Learning Works' },
        { title: 'Admissions', url: '#' },
        { title: 'Tuition and Financial Aid', url: '#' },
        { title: 'Military', url: '#'},
      ],
    } only %}
  {% endset %}

  {% set menu %}
    {% include '@oe/compact-menu/compact-menu.twig' with {
      align: 'right',
      menu: vertical_menu
    } only %}
  {% endset %}

  {% block dogear_content %}
    <div class="region region--branding">
      <div class="block block--system-branding-block">
        <a href="/">
          {% include '@oe/sprite/sprite.twig' with { name: 'wc-mark' } only %}
          <span class="visually-hidden">Penn State World Campus</span>
        </a>
      </div>
    </div>
  {% endblock %}
  {% block content %}
    <div class="region region--utility-small-viewports">
      {{ search_vertical }}
      {{ menu }}
    </div>
    <div class="region region--utility-large-viewports">
      <ul class="utility-menu" role="list">
        <li class="utility-menu__item"><a class="utility-menu__link" href="#">Current Students</a></li>
        <li class="utility-menu__item"><a class="utility-menu__link" href="#">Alumni</a></li>
        <li class="utility-menu__item"><a class="utility-menu__link" href="#">Events</a></li>
      </ul>
      {{ search_horizontal }}
    </div>
    <div class="region region--cta-large-viewports">
      {% apply spaceless %}
        {{ how_to_apply }}
        {{ request_info }}
      {% endapply %}
    </div>
  {% endblock %}
  {% block overflow %}
    <div class="region region--cta-small-viewports">
      {% apply spaceless %}
        {% include '@oe/cta/cta-group.twig' with {
          ctas: [how_to_apply, request_info],
          expand_to_fit: true,
        } only %}
      {% endapply %}
    </div>
    <div class="region region--overflow-large-viewports">
      {{ horizontal_menu }}
    </div>
  {% endblock %}
{% endembed %}
